<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
	"-//Hibernate/Hibernate Mapping DTD//EN"  
 	"http://hibernate.org/dtd/hibernate-mapping.dtd">

<hibernate-mapping>
	
	<class name="sge.categoria.Categoria" table= "CATEGORIAS">
		<id name="id" column="ID"><generator class="native"></generator></id>
		<property name="categoria" 		column="CATEGORIA"></property>
		<property name="cargoFijo" 		column="CARGO_FIJO"></property>
		<property name="cargoVariable" 	column="CRAGO_VARIABLE"></property>

	</class>
	
</hibernate-mapping>